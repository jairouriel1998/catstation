<div class="col-md-4 mx-auto">
    <br>
    <div class="card">
        <div class="card-header align-center">
            <h3 class="text-center">EDITAR VENTA</h3>
        </div>
        <div class="card-body">
            <form action="/sales/edit/{{sale.sale_code}}" method="POST">
            <h1>{{sale.sale_code}}</h1>
                <div class="form-group">
                    <label for="sale_liter_sold">Cantidad de litros vendidos</label>
                    <input type="number" class="form-control" name="sale_liters_sold" placeholder="Litros vendidos" min="0" value="{{sale.sale_liters_sold}}" step="0.01" title="Currency" pattern="^\d+(?:\.\d{1,2})?$" onblur="this.parentNode.parentNode.style.backgroundColor=/^\d+(?:\.\d{1,2})?$/.test(this.value)?'inherit':'red'" autofocus require>
                </div>
                <div class="form-group">
                    <label for="sale_liter_sold">Codigo de empleado</label>
                    <input type="text" class="form-control" name="emp_sale_code" value="{{sale.emp_sale_code}}" placeholder="Empleado">
                </div>
                <div class="form-group">
                    <label for="sale_liter_sold">Codigo del dispensador</label>
                    <input type="text" class="form-control" name="dispenser_sale_code" value="{{sale.dispenser_sale_code}}" placeholder="Dispensador">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        GUARDAR
                    </button>
                </div>
                <div class="form-group">
                    <a class="btn btn-info btn-block" href="/sales">CANCELAR</a>
                </div>
            </form>
        </div>
    </div>
</div>